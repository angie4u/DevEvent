
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="main-container">
    <div class="container">
        <div class="row">
            <div class="main col-md-12">
                <h1 class="page-title">Create Event</h1>
                <div class="separator-2"></div>
                <div class="space-bottom"></div>
                <fieldset>
                    <legend>Event information</legend>
                    <form role="form" class="form-horizontal" id="event-information">
                        <input type="hidden" id="Latitude"/>
                        <input type="hidden" id="Longitude" />
                        <div class="row">
                            <div class="col-lg-2">
                                <h3 class="title">Basic Info</h3>
                            </div>
                            <div class="col-lg-9 col-lg-offset-1">
                                <div class="form-group">
                                    <label for="title" class="col-md-2 control-label">Title<small class="text-default">*</small></label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="title" placeholder="title">
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="startdate" class="col-md-2 control-label">Start Date<small class="text-default">*</small></label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="startdate" placeholder="Start Date">
                                        <i class="fa fa-calendar form-control-feedback"></i>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="enddate" class="col-md-2 control-label">End Date<small class="text-default">*</small></label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="enddate" placeholder="End Date">
                                        <i class="fa fa-calendar form-control-feedback"></i>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="venue" class="col-md-2 control-label">Venue</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="venue" placeholder="Venue">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="audience" class="col-md-2 control-label">Audience</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="audience" placeholder="Audience">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="regurl" class="col-md-2 control-label">Registration Url</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="regurl" placeholder="Registration Url">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="desc" class="col-md-2 control-label">Description</label>
                                    <div class="col-md-10">
                                        <textarea class="form-control" rows="4"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space"></div>
                        
                        <div class="row">
                            <div class="col-lg-2">
                                <h3 class="title">Location</h3>
                            </div>
                            <div class="col-lg-9 col-lg-offset-1">
                                <div class="form-group">
                                    <label for="address" class="col-md-2 control-label">Address</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="address" placeholder="Address">
                                        <button type="button" id="showonmap">지도에 표시</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div id="map" style="height:300px;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space"></div>
                        <div class="row">
                            <div class="col-lg-2">
                                <h3 class="title">Related Links</h3>
                            </div>
                            <div class="col-lg-9 col-lg-offset-1">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <textarea class="form-control" rows="4"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                       
                    </form>
                </fieldset>
                
                <div class="text-right">
                    <button class="btn btn-primary btn-lg btn-animated" type="submit">Save <i class="fa fa-floppy-o pl-10"></i></button>
                    <a class="btn btn-animated btn-lg btn-danger" href="/adminevent">Cancel <i class="fa fa-times"></i></a>
                </div>
            </div>
            <!-- main end -->
        </div>
    </div>
</section>
<!-- main-container end -->
@section scripts
{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD7ndnGJILpz_8zQ9UgK5I6-uEGzl5w0J4" type="text/javascript"></script>
    @Scripts.Render("~/js/views/adminevent/create")
}


